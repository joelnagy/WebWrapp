<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.www.webwrapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NAME</name>
    <description>
        DESCRIPTION
    </description>
    <author email="hello@example.com" href="https://www.example.com">
        AUTHOR
    </author>
    <content src="https://www.example.com/path" />
    <preference name="StatusBarBackgroundColor" value="#STATUSBARBACKGROUNDCOLOR" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AppendUserAgent" value="WebWrapp 1.0" />
    <preference name="Orientation" value="portrait" />
    <access origin="*" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-ldpi" src="res/screen/android/splash.9.png" />
        <splash density="port-mdpi" src="res/screen/android/splash.9.png" />
        <splash density="port-hdpi" src="res/screen/android/splash.9.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash.9.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash.9.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash.9.png" />
        <icon density="ldpi" src="res/icon/android/icon-ldpi-36.png" />
        <icon density="mdpi" src="res/icon/android/icon-mdpi-48.png" />
        <icon density="hdpi" src="res/icon/android/icon-hdpi-72.png" />
        <icon density="xhdpi" src="res/icon/android/icon-xhdpi-96.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-xxhdpi-144.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-xxxhdpi-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="144" src="/wp-content/uploads/2018/01/icon-144.png" width="144" />
        <icon height="72" src="/wp-content/uploads/2018/01/icon-72-hdpi.png" width="72" />
    </platform>
    <platform name="windows">
    </platform>
    <platform name="wp8">
    </platform>
    <universal-links>
        <host name="www.example.com" scheme="https" />
    </universal-links>
    <allow-navigation hap-rule="yes" href="https://www.example.com/*" />
    <engine name="android" spec="^6.1.2" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-hostedwebapp" spec="^0.3.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <plugin name="cordova-plugin-themeablebrowser" spec="^0.2.17" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-universal-links-plugin" spec="^1.2.1" />
</widget>
